{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}

{{#post}}

<section>
    
    {{#if feature_image}}
        <div class="container">
            <img class=".img-responsive feature-image" src={{feature_image}} alt="" />
        </div>
    {{/if}}

    <h2>{{title}}</h2>

    <article style="background-color:beige;">

            <section class="post-content">
                {{content}}
            </section>

            <section class="social-share">
                {{> "social_share"}}
            </section>

            <footer class="post-footer">

            {{! Everything inside the #author tags pulls data from the author }}
            {{#author}}

                {{#if author.profile_image}}
                <figure class="author-image">
                    <a class="img" href="{{url}}" style="background-image: url({{author.profile_image}})"><span class="hidden">{{name}}'s Picture</span></a>
                </figure>
                {{/if}}

                <section class="author">
                    <h4><a href="{{url}}">{{name}}</a></h4>

                    {{#if bio}}
                        <p>{{bio}}</p>
                    {{else}}
                        <p>Read <a href="{{url}}">more posts</a> by this author.</p>
                    {{/if}}
                    <div class="author-meta">
                        {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
                        {{#if website}}<span class="author-link icon-link"><a href="{{website}}">{{website}}</a></span>{{/if}}
                    </div>
                </section>

            {{/author}}



            <section class="post-comments">
                <div id="disqus_thread"></div>
                <script type="text/javascript">
                // required: replace example with your forum shortname
                if(disqus_shortname && typeof disqus_shortname === "string") {
                    var disqus_identifier = '{{post.id}}';

                    /* * * DON'T EDIT BELOW THIS LINE * * */
                    (function() {
                    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                    })();
                }
                </script>
                <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
            </section>

            </footer>

        </article>

    <aside class="read-next">
        {{#next_post}}
        <a class="read-next-story {{#if feature_image}}" style="background-image: url({{feature_image}}){{else}}no-cover{{/if}}" href="{{url}}">
            <section class="post">
                <h2>{{title}}</h2>
                <p>{{excerpt words="19"}}&hellip;</p>
            </section>
        </a>
        {{/next_post}}
        {{#prev_post}}
        <a class="read-next-story prev {{#if feature_image}}" style="background-image: url({{feature_image}}){{else}}no-cover{{/if}}" href="{{url}}">
            <section class="post">
                <h2>{{title}}</h2>
                <p>{{excerpt words="19"}}&hellip;</p>
            </section>
        </a>
        {{/prev_post}}
    </aside>

    <div class="row">
        <div class="col-md-3">
            {{#author}}

                {{#if author.profile_image}}
                <figure class="author-image">
                    <a class="img" href="{{url}}" style="background-image: url({{author.profile_image}})"><span class="hidden">{{name}}'s Picture</span></a>
                </figure>
                {{/if}}

                <section class="author">
                    <h4><a href="{{url}}">{{name}}</a></h4>

                    {{#if bio}}
                        <p>{{bio}}</p>
                    {{else}}
                        <p>Read <a href="{{url}}">more posts</a> by this author.</p>
                    {{/if}}
                    <div class="author-meta">
                        {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
                        {{#if website}}<span class="author-link icon-link"><a href="{{website}}">{{website}}</a></span>{{/if}}
                    </div>
                </section>

            {{/author}}
        </div>
        <div class="col-md-9">
            <h1>{{title}}</h1>
            <div class="time-post">
                <i class="fa fa-calendar-o" aria-hidden="true"></i>
                <time class="post-date" datetime="{{date format='YYYY-MMM-DD'}}">{{date format="DD MMM YYYY"}}</time>
            </div>
        </div>
    </div>

</section>

{{/post}}
